@model Bank.Models.Customer

@{
    ViewBag.Title = "Transfer";
}

<h2>Transfer</h2>

<form action="/CustomerPanel/Transfer" method="post">

    <div class="form-horizontal">

        @Html.HiddenFor(model => model.Accountnumber)


        <div class="form-group">
            <h5 class="control-label col-md-2"><b>Receiver Account Number</b></h5>
            <div class="col-md-10">
                <input class="form-control" type="number" id="receivedCustomerId" name="receivedCustomerId" , required="Required" />
            </div>
        </div>

        <div class="form-group">
            <h5 class="control-label col-md-2"><b>Transfer Amount</b></h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control", required = "Required" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Transfer" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back", "CustomerSection", Model)
</div>